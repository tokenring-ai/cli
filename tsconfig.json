{
 "compilerOptions": {
  "target": "ES2022",
  "module": "ESNext",
  "moduleResolution": "bundler",
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "strict": true,
  "allowJs": true,
  "checkJs": true,
  "allowImportingTsExtensions": true,
  "noEmit": true,
  "types": [
   "bun",
   "vitest"
  ],
  "rootDir": ".",
  "jsx": "preserve",
  "jsxImportSource": "@opentui/react"
 },
 "include": [
  "**/*.ts",
  "**/*.tsx"
 ],
 "exclude": [
  "node_modules",
  "**/vitest.config.*"
 ]
}
